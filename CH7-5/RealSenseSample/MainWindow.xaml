<Window x:Class="RealSenseSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" SizeToContent="WidthAndHeight"
        Loaded="Window_Loaded"
        Unloaded="Window_Unloaded"
        KeyDown="Window_KeyDown"
        >
    <StackPanel Orientation="Horizontal">
        <Image x:Name="ImageColor" Width="640" Height="480"/>
        
        <StackPanel Orientation="Vertical" Width="200">
            <TextBlock x:Name="TextResolution" />
            <TextBlock x:Name="TextReconstructOption" />
            <TextBlock x:Name="TextModelFormat" />
            <TextBlock x:Name="TextMode" />
            <TextBlock x:Name="TextOutputFile" />
        </StackPanel>
    </StackPanel>
</Window>
